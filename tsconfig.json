{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
		"es6"
    ],
    "target": "ES6",
    "removeComments": true,
	"noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "sourceMap": false,
	"types": ["node"],
	"baseUrl": "../",
    "typeRoots": [
		"../"
    ],
	"outDir": "build"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "*"
  ]
}